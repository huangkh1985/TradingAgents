# Streamlit Cloud Secrets 配置示例
# 
# 使用说明：
# 1. 在 Streamlit Cloud 部署应用后，进入 Settings → Secrets
# 2. 复制此文件内容，填入真实的 API 密钥和配置
# 3. 本地开发：复制此文件为 secrets.toml 并填入真实值
# 
# ⚠️ 注意：不要将包含真实密钥的 secrets.toml 上传到 GitHub！

# =============================================================================
# LLM 服务商 API 配置
# =============================================================================

[llm]
# OpenAI（推荐配置 ⭐）
OPENAI_API_KEY = "sk-your-openai-api-key"
OPENAI_API_BASE = "https://api.openai.com/v1"  # 可选，使用自定义端点

# 阿里云通义千问 (DashScope)
DASHSCOPE_API_KEY = "sk-your-dashscope-api-key"

# Google Gemini
GOOGLE_API_KEY = "your-google-api-key"

# 百度千帆
QIANFAN_AK = "your-qianfan-access-key"
QIANFAN_SK = "your-qianfan-secret-key"

# DeepSeek
DEEPSEEK_API_KEY = "sk-your-deepseek-api-key"
DEEPSEEK_BASE_URL = "https://api.deepseek.com"

# Anthropic Claude
ANTHROPIC_API_KEY = "sk-ant-your-anthropic-key"

# =============================================================================
# 金融数据源 API 配置
# =============================================================================

[data_sources]
# AKShare (完全免费，无需 token ⭐)
# 无需配置，开箱即用！支持 A股、港股、美股等

# Tushare (A股专业数据，需要注册)
TUSHARE_TOKEN = "your-tushare-token"

# Reddit (社交媒体数据)
REDDIT_CLIENT_ID = "your-reddit-client-id"
REDDIT_CLIENT_SECRET = "your-reddit-client-secret"
REDDIT_USER_AGENT = "TradingAgents by /u/yourusername"

# Finnhub (美股数据)
FINNHUB_API_KEY = "your-finnhub-api-key"

# EOD Historical Data
EODHD_API_KEY = "your-eodhd-api-key"

# Alpha Vantage
ALPHA_VANTAGE_API_KEY = "your-alphavantage-api-key"

# =============================================================================
# 数据库配置
# =============================================================================

[database]
# MongoDB (用于存储分析报告和用户数据)
MONGODB_URI = "mongodb+srv://username:password@cluster.mongodb.net/dbname"
MONGODB_DB_NAME = "tradingagents"

# Redis (用于缓存)
REDIS_URL = "redis://username:password@hostname:6379/0"
# 或使用 Redis Cloud
REDIS_HOST = "your-redis-host.cloud.redislabs.com"
REDIS_PORT = "6379"
REDIS_PASSWORD = "your-redis-password"

# =============================================================================
# 应用配置
# =============================================================================

[app]
# 默认 LLM 配置
DEFAULT_MODEL_PROVIDER = "openai"  # openai, dashscope, google, qianfan, deepseek
DEFAULT_MODEL_NAME = "gpt-4o"

# 数据源配置
DEFAULT_DATA_SOURCE = "tushare"  # tushare, akshare, yfinance

# 调试模式
DEBUG_MODE = false
LOG_LEVEL = "INFO"

# =============================================================================
# 用户认证配置（如果启用）
# =============================================================================

[auth]
# 管理员账号
ADMIN_USERNAME = "admin"
ADMIN_PASSWORD_HASH = "your-bcrypt-hashed-password"

# JWT 密钥
JWT_SECRET_KEY = "your-random-secret-key-for-jwt"

# Session 密钥
SESSION_SECRET = "your-random-session-secret"

# =============================================================================
# 通知配置（可选）
# =============================================================================

[notifications]
# 邮件通知
SMTP_SERVER = "smtp.gmail.com"
SMTP_PORT = "587"
SMTP_USERNAME = "your-email@gmail.com"
SMTP_PASSWORD = "your-app-password"

# 钉钉机器人
DINGTALK_WEBHOOK = "https://oapi.dingtalk.com/robot/send?access_token=xxx"

# 企业微信机器人
WECHAT_WEBHOOK = "https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx"

# =============================================================================
# 其他服务配置
# =============================================================================

[services]
# 代理配置（如果需要）
HTTP_PROXY = ""
HTTPS_PROXY = ""

# 超时设置
API_TIMEOUT = "60"
REQUEST_TIMEOUT = "30"

